<%= form_for(@post) do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    Tags:
  </div>
  <br>

  <div class="field">
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
  </div>
  <br>

  <div class="field">
    <%= f.fields_for :categories do |category| %>
      <%= category.label :new_tag %>
      <%= category.text_field :name %>
      <br>
    <% end %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
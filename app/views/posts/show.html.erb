<h1>Post: <%= @post.title %></h1>

<h3><%= @post.title %></h3>
<p>
  <%= @post.content %>
</p>

<div>
  <h4>Categories:</h4>
  <ul>
    <% @post.categories.each do |category| %>
    <li><%= category.name %></li>
    <% end %>
  </ul>

  <h4>Comments:</h4>
  <ul>
    <% @post.comments.each do |comment| %>
    <li><%= comment.user.username %> says: <%= comment.content %></li>
    <% end %>
  </ul>

  <h4>Commented Users:</h4>
  <ul>
    <% @post.comments.map { |comment| comment.user }.uniq.each do |user| %>
    <li><%= link_to user.username, user_path(user.id) %></li>
    <% end %>
  </ul>
</div>

<h1>New Comment</h1>
<%= form_for @comment do |f| %>
  <%= f.hidden_field :post_id %>

  <%= f.label :content %><br>
  <%= f.text_field :content %><br><br>

  <%= f.label :user_id %><br>
  <%= f.collection_select :user_id, User.all, :id, :username %><br><br>

  <%= f.fields_for :user, User.new do |user_fields| %>
    <%= user_fields.label :username %>
    <%= user_fields.text_field :username %>
    <br>
  <% end %>

  <%= f.submit %>
<% end %>
